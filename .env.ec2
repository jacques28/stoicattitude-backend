# EC2 Production Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# Security Secrets - GENERATE NEW ONES FOR PRODUCTION!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))" to generate
APP_KEYS=REPLACE_WITH_YOUR_APP_KEYS_COMMA_SEPARATED
API_TOKEN_SALT=REPLACE_WITH_YOUR_API_TOKEN_SALT
ADMIN_JWT_SECRET=REPLACE_WITH_YOUR_ADMIN_JWT_SECRET
TRANSFER_TOKEN_SALT=REPLACE_WITH_YOUR_TRANSFER_TOKEN_SALT
JWT_SECRET=REPLACE_WITH_YOUR_JWT_SECRET

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=stoic_attitude
DATABASE_USERNAME=strapi_user
DATABASE_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Public URL - Replace with your EC2 public IP or domain
STRAPI_URL=http://YOUR_EC2_PUBLIC_IP:1337

# File Upload Configuration
UPLOAD_PROVIDER=local
UPLOAD_SIZE_LIMIT=10485760

# Security Configuration
ADMIN_PATH=/admin

# Performance Settings for EC2 t2.micro
NODE_OPTIONS=--max-old-space-size=400

# Optional: Cloudinary for file uploads (recommended for production)
# CLOUDINARY_NAME=your_cloudinary_name
# CLOUDINARY_KEY=your_cloudinary_key
# CLOUDINARY_SECRET=your_cloudinary_secret
